<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <com.ywb.tuyue.widget.HeaderView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.ywb.tuyue.widget.BGABanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:banner_isShowIndicator="true" />

        <android.support.design.widget.TabLayout
            android:id="@+id/pagerTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#FFFF2645"
            app:tabIndicatorHeight="@dimen/dp_5"
            app:tabMaxWidth="100dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#FFFF2645"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/my_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-2dp"
            android:background="@color/hint_color" />

        <com.ywb.tuyue.widget.CustomViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>